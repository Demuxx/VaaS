<%= simple_form_for(@machine) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :box %>
    <%= f.association :network %>
    <%= f.association :key %>
    <%= f.label :puppet_ids %>
    <%= f.select :puppet_ids, Puppet.all.collect {|p| [p.name, p.id]}, {:include_blank => 'None'}, :multiple => true %>
    <%= f.label :chef_ids %>
    <%= f.select :chef_ids, Chef.all.collect {|c| [c.name, c.id]}, {:include_blank => 'None'}, :multiple => true %>
    <%= f.label :bash_ids %>
    <%= f.select :bash_ids, Bash.all.collect {|b| [b.name, b.id]}, {:include_blank => 'None'}, :multiple => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
